<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
     http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd
     http://www.liquibase.org/xml/ns/dbchangelog-ext
     http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

  <changeSet id="017_create_campaign_npc_table" author="jessthepig">
    <createTable tableName="campaign_npc">
      <column name="id" type="BIGINT" autoIncrement="true">
        <constraints primaryKey="true" nullable="false"/>
      </column>

      <column name="campaign_id" type="BIGINT">
        <constraints nullable="false"/>
      </column>

      <column name="npc_id" type="BIGINT">
        <constraints nullable="false"/>
      </column>

      <column name="date_created" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
        <constraints nullable="false"/>
      </column>

      <column name="last_updated" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
      
      <column name="override_enabled" type="BOOLEAN" defaultValueBoolean="false"/>
    </createTable>

    <!-- Ajout des clés étrangères -->
<addForeignKeyConstraint 
    baseTableName="campaign_npc" baseColumnNames="campaign_id"
    referencedTableName="campaign" referencedColumnNames="id"
    constraintName="fk_campaignnpc_campaign"/>
    
<addForeignKeyConstraint 
    baseTableName="campaign_npc" baseColumnNames="npc_id"
    referencedTableName="npcs" referencedColumnNames="id"
    constraintName="fk_campaignnpc_npc"/>
  </changeSet>

</databaseChangeLog>
