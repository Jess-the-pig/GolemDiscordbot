<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd
    http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">
<changeSet id="010_create_characters_table" author="jessthepig">
    <createTable tableName="characters">
        <!-- IdentitÃ© -->
        <column name="id" type="BIGINT" autoIncrement="true">
            <constraints primaryKey="true" nullable="false"/>
        </column>
        <column name="player_name" type="VARCHAR(255)">
        <constraints nullable="false"/>
        </column>
        <column name="character_name" type="VARCHAR(255)">
        <constraints nullable="false"/></column>
        <column name="race" type="VARCHAR(100)">
        <constraints nullable="true"/></column>
        <column name="background" type="VARCHAR(100)">
        <constraints nullable="true"/></column>
        <column name="class" type="VARCHAR(100)">
        <constraints nullable="true"/></column>
        <column name="level" type="INT">
        <constraints nullable="true"/></column>
        <column name="experience_points" type="INT">
        <constraints nullable="true"/></column>

        <!-- Traits, Langues, Infos perso -->
        <column name="features_and_traits" type="TEXT">
        <constraints nullable="true"/></column>
        <column name="languages" type="VARCHAR(1000)">
        <constraints nullable="true"/></column>
        <column name="personality_traits" type="VARCHAR(1000)">
        <constraints nullable="true"/></column>
        <column name="campaign_id" type="BIGINT">
        <constraints nullable="true"/></column>


        <column name="datecreated" type="DATETIME">
        <constraints nullable="false"/></column>
        <column name="lastupdated" type="DATETIME">
        <constraints nullable="false"/></column>





    </createTable>
            <addForeignKeyConstraint 
            baseTableName="characters"
            baseColumnNames="campaign_id"
            referencedTableName="campaign"
            referencedColumnNames="id"
            constraintName="fk_characters_campaign"/>
</changeSet>

    </databaseChangeLog>