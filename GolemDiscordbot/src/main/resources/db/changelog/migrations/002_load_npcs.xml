<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd
    http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">
  <changeSet id="003_create_npcs_table" author="jessthepig" runOnChange="true">
    <createTable tableName="npcs">
        <column name="id" type="BIGINT"/>
        <column name="char_id" type="VARCHAR(255)"/>
        <column name="name" type="VARCHAR(255)"/>
        <column name="base_hp" type="INT"/>
        <column name="stats_1" type="INT"/>
        <column name="stats_2" type="INT"/>
        <column name="stats_3" type="INT"/>
        <column name="stats_4" type="INT"/>
        <column name="stats_5" type="INT"/>
        <column name="stats_6" type="INT"/>
        <column name="background" type="VARCHAR(255)"/>
        <column name="race" type="VARCHAR(255)"/>
        <column name="class_starting" type="VARCHAR(100)"/>
        <column name="class_starting_level" type="INT"/>
        <column name="subclass_starting" type="VARCHAR(100)"/>
        <column name="class_other" type="VARCHAR(255)"/>
        <column name="subclass_other" type="VARCHAR(255)"/>
        <column name="total_level" type="INT"/>
        <column name="feats" type="VARCHAR(1024)"/>
        <column name="inventory" type="VARCHAR(2048)"/>
        <column name="date_modified" type="VARCHAR(255)"/>
        <column name="notes_len" type="INT"/>
        <column name="gold" type="DECIMAL(10,2)"/>
    </createTable>
</changeSet>


    <changeSet id="004_load_npcs" author="jessthepig">
        <loadData
            tableName="npcs"
            file="db/changelog/migrations/data/over_one_mil_chars.csv"
            separator=","
            encoding="UTF-8"
            />
    </changeSet>
</databaseChangeLog>