<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd
    http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">
<changeSet id="005_create_spells_table_extended" author="jessthepig">
    <createTable tableName="spells">
        <column name="name" type="VARCHAR(255)">
            <constraints nullable="true"/>
        </column>
        <column name="casting_time" type="VARCHAR(100)">
            <constraints nullable="true"/>
        </column>
        <column name="casting_time_misc" type="VARCHAR(255)">
            <constraints nullable="true"/>
        </column>
        <column name="component_material" type="VARCHAR(255)">
            <constraints nullable="true"/>
        </column>
        <column name="component_semantic" type="VARCHAR(255)">
            <constraints nullable="true"/>
        </column>
        <column name="component_verbal" type="VARCHAR(255)">
            <constraints nullable="true"/>
        </column>
        <column name="component_misc" type="VARCHAR(4000)">
            <constraints nullable="true"/>
        </column>
        <column name="description" type="VARCHAR(4000)">
            <constraints nullable="true"/>
        </column>
        <column name="duration" type="VARCHAR(100)">
            <constraints nullable="true"/>
        </column>
        <column name="level" type="VARCHAR(100)">
            <constraints nullable="true"/>
        </column>
        <column name="range" type="VARCHAR(255)">
            <constraints nullable="true"/>
        </column>
        <column name="range_area" type="VARCHAR(100)">
            <constraints nullable="true"/>
        </column>
        <column name="school" type="VARCHAR(100)">
            <constraints nullable="true"/>
        </column>
        <column name="school_ritual" type="VARCHAR(100)">
            <constraints nullable="true"/>
        </column>
    </createTable>
</changeSet>




    <changeSet id="006_load_spells" author="jessthepig">
        <loadData
            tableName="spells"
            file="db/changelog/migrations/data/spells.csv"
            separator=","
            encoding="UTF-8"/>
    </changeSet>
</databaseChangeLog>