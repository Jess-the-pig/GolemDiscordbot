<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd
    http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">
    <changeSet id="001_create_monsters_table" author="jessthepig" runOnChange="true">
    <createTable tableName="monsters">
        <column name="name" type="VARCHAR(255)"/>
        <column name="url" type="VARCHAR(255)"/>
        <column name="cr" type="VARCHAR(100)"/>
        <column name="type" type="VARCHAR(100)"/>
        <column name="size" type="VARCHAR(100)"/>
        <column name="ac" type="VARCHAR(100)"/>
        <column name="hp" type="VARCHAR(100)"/>
        <column name="speed" type="VARCHAR(100)"/>
        <column name="align" type="VARCHAR(100)"/>
        <column name="legendary" type="VARCHAR(100)"/>
        <column name="source" type="VARCHAR(100)"/>
        <column name="str" type="VARCHAR(100)"/>
        <column name="dex" type="VARCHAR(100)"/>
        <column name="con" type="VARCHAR(100)"/>
        <column name="int" type="VARCHAR(100)"/>
        <column name="wis" type="VARCHAR(100)"/>
        <column name="cha" type="VARCHAR(100)"/>
    </createTable>
</changeSet>

    <changeSet id="002_load_monsters" author="jessthepig">
        <loadData
            tableName="monsters"
            file="db/changelog/migrations/data/dnd_monsters.csv"
            separator=","
            encoding="UTF-8"/>
    </changeSet>
</databaseChangeLog>