<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd
    http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">
<changeSet id="6_create_equipments_table" author="jessthepig">
    <createTable tableName="equipments">
        <column name="id" type="BIGINT" autoIncrement="true">
            <constraints primaryKey="true" nullable="false"/>
        </column>
        <column name="name" type="VARCHAR(255)"/>
        <column name="type1" type="VARCHAR(100)"/>
        <column name="type2" type="VARCHAR(100)"/>
        <column name="weight_lbs" type="INT"/>
        <column name="price_golds" type="INT"/>
    </createTable>
</changeSet>




    <changeSet id="7_load_equipements" author="jessthepig">
        <loadData
            tableName="equipments"
            file="db/changelog/migrations/data/dndbeyond_equips.csv"
            separator=","
            encoding="UTF-8"/>
    </changeSet>
</databaseChangeLog>